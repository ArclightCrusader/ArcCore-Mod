package com.thearclightcrusader.ArcCore.dimensions;

import com.thearclightcrusader.ArcCore.Main;
import com.thearclightcrusader.ArcCore.worldgen.BiomesAC;

import net.minecraft.world.WorldProvider;
import net.minecraft.world.biome.BiomeGenBase;
import net.minecraft.world.biome.WorldChunkManager;
import net.minecraft.world.biome.WorldChunkManagerHell;
import net.minecraft.world.chunk.IChunkProvider;
import net.minecraftforge.common.BiomeManager;

public class WorldProviderFairy extends WorldProvider{
	
	private BiomeGenBase[] biomes = {BiomesAC.biomeGildedForest};
	private BiomeGenBase[] biomes2 = {BiomesAC.biomeIceMountains};
	private BiomeGenBase biomeGen;
	
	public WorldProviderFairy(){
		this.dimensionId = Main.fairyDimId;
	}
	
	public void registerWorldChunkManager(){
		this.worldChunkMgr = new WorldChunkManagerFairy(biomeGen, biomes, biomes2, 1.2F);
		this.dimensionId = Main.fairyDimId;
	}
	
	public IChunkProvider createChunkGeneration(){
		return new ChunkProviderFairy(worldObj, dimensionId, false);
	}
	
	@Override
	public boolean canCoordinateBeSpawn(int x, int z)
	{
		return true;
	}
	
	public String getDimensionName() {
		return "Fairy World";
	}
	
	@Override
	public String getSaveFolder()
	{
		return getDimensionName();
	}
	
	@Override
	public String getWelcomeMessage()
	{
		return "Welcome to the Land of Wonders";
	}

	@Override
	public String getDepartMessage()
	{
		return "Leaving the " + getDimensionName();
	}
	
	
	
}
