package com.thearclightcrusader.ArcCore.blocks;

import java.util.List;
import java.util.Random;

import com.thearclightcrusader.ArcCore.Main;
import com.thearclightcrusader.ArcCore.proxy.References;

import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;
import net.minecraft.block.Block;
import net.minecraft.block.BlockSlab;
import net.minecraft.block.material.Material;
import net.minecraft.client.renderer.texture.IIconRegister;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.util.IIcon;
import net.minecraft.world.World;

public class UFairyStoneSlab extends BlockSlab{

	 @SideOnly(Side.CLIENT)
	    private IIcon side;
	 
	 private int blockNumber;
	
	public UFairyStoneSlab(boolean b, Material rock, int i) {
		super(b, Material.rock);
		
		blockNumber = i;
		
		this.setHardness(-1);
		this.setResistance(9999);
		this.setCreativeTab(Main.arcCoreTab);
		this.useNeighborBrightness = true;
		this.setBlockName("UFairyStoneSlab");
	}

	@Override
	public String func_150002_b(int i) {
		
		return super.getUnlocalizedName();
	}
	
    @SideOnly(Side.CLIENT)
    public void registerBlockIcons(IIconRegister iconRegister)
    {
    	if(blockNumber == 1){
    		this.blockIcon = iconRegister.registerIcon(References.MODID + ":FairyStoneBricks");
    		this.side = iconRegister.registerIcon(References.MODID + ":FairyStoneBricks");
        
    	}else if(blockNumber == 2){
    	    this.blockIcon = iconRegister.registerIcon(References.MODID + ":EmeraldStoneBricks");
    	    this.side = iconRegister.registerIcon(References.MODID + ":EmeraldStoneBricks");
    	        
    	}else if(blockNumber == 3){
    	    this.blockIcon = iconRegister.registerIcon(References.MODID + ":GildedStoneBricks");
    	    this.side = iconRegister.registerIcon(References.MODID + ":GildedStoneBricks");
    	    
    	}else if(blockNumber == 4){
    	    this.blockIcon = iconRegister.registerIcon(References.MODID + ":WhiteStoneBricks");
    	    this.side = iconRegister.registerIcon(References.MODID + ":WhiteStoneBricks");
    	      
    	}else if(blockNumber == 5){
    	    this.blockIcon = iconRegister.registerIcon(References.MODID + ":SapphireStoneBricks");
    	    this.side = iconRegister.registerIcon(References.MODID + ":SapphireStoneBricks");
    	      
    	}else if(blockNumber == 6){
    	    this.blockIcon = iconRegister.registerIcon(References.MODID + ":PlatinumStoneBricks");
    	    this.side = iconRegister.registerIcon(References.MODID + ":PlatinumStoneBricks");
    	      
    	}else if(blockNumber == 7){
    	    this.blockIcon = iconRegister.registerIcon(References.MODID + ":BlackStoneBricks");
    	    this.side = iconRegister.registerIcon(References.MODID + ":BlackStoneBricks");
    	      
    	}
    }
    
    public IIcon getIcon(int side, int meta){
    	int i = meta & 7;
    	
    	if(this.field_150004_a && (meta & 2) != 0){
    		side = 1;
    	}
    	return side == 1 ? this.side : (side == 0 ? this.side : this.blockIcon);
    }
    
    @Override
    @SideOnly(Side.CLIENT)
    public void getSubBlocks(Item item, CreativeTabs tab, List list){
    	if(item != Item.getItemFromBlock(Main.uFairyStoneSlabDouble)){
    		list.add(new ItemStack(item, 1, 0));
    	}
    }
    
    @SideOnly(Side.CLIENT)
    private static boolean isBlockSingleSlab(Block block){
    	return block == Main.uFairyStoneSlab;
    }
    
    @Override
    @SideOnly(Side.CLIENT)
    public Item getItem(World world, int x, int y, int z){
       	if(blockNumber == 1){
       	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
        
    	}else if(blockNumber == 2){
    	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
    	        
    	}else if(blockNumber == 3){
    	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
    		
    	}else if(blockNumber == 4){
    	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
    	      
    	}else if(blockNumber == 5){
    	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
    	      
    	}else if(blockNumber == 6){
    	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
    		
    	}else if(blockNumber == 7){
    	 	return isBlockSingleSlab(this) ? Item.getItemFromBlock(this) : (this == Main.uFairyStoneSlabDouble ? Item.getItemFromBlock(Main.uFairyStoneSlab) : Item.getItemFromBlock(Main.uFairyStoneSlab));
    	}else{
    		return null;
    	}
    }
    
    protected ItemStack createStackedBlock(int i){
       	if(blockNumber == 1){
       		return new ItemStack(Main.uFairyStoneSlab, 2, 0);
        
    	}else if(blockNumber == 2){
    		return new ItemStack(Main.uEmeraldStoneSlab, 2, 0);
    	        
    	}else if(blockNumber == 3){
    		return new ItemStack(Main.uGildedStoneSlab, 2, 0);
    		
    	}else if(blockNumber == 4){
    		return new ItemStack(Main.uWhiteStoneSlab, 2, 0);
    	      
    	}else if(blockNumber == 5){
    		return new ItemStack(Main.uSapphireStoneSlab, 2, 0);
    	      
    	}else if(blockNumber == 6){
    		return new ItemStack(Main.uPlatinumStoneSlab, 2, 0);
    		
    	}else if(blockNumber == 7){
    		return new ItemStack(Main.uBlackStoneSlab, 2, 0);
    	}else{
    		return null;
    	}
    }
    
    

}
