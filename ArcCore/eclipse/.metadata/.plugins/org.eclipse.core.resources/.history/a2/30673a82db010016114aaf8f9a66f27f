package com.thearclightcrusader.ArcCore;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.entity.player.InventoryPlayer;
import net.minecraft.inventory.Container;
import net.minecraft.inventory.Slot;

public class ContainerArcCoreInfuser extends Container {

	private TileEntityArcCoreInfuser infuser;
	private int trioCookTime;
	private int trioPower;
	private int lastItemBurnTime;
	
	public ContainerArcCoreInfuser(InventoryPlayer invPlayer, TileEntityArcCoreInfuser teArcCore){
		trioCookTime = 0;
		trioPower = 0;
		lastItemBurnTime = 0;
		
		infuser = teArcCore;
		
		this.addSlotToContainer(new Slot(teArcCore, 0, 56, 25));
		this.addSlotToContainer(new Slot(teArcCore, 1, 56, 25));
		this.addSlotToContainer(new Slot(teArcCore, 2, 56, 25));
		this.addSlotToContainer(new SlotArcCoreInfuser(teArcCore, 3, 56, 25));
		this.addSlotToContainer(new Slot(teArcCore, 4, 56, 25));
	}
	
	@Override
	public boolean canInteractWith(EntityPlayer p_75145_1_) {
		
		return false;
	}

}
